<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nagyBetusGomb"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/nagyBetusGomb"
        android:text="NAGY BETUS SZOVEG"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kisBetusGomb"
        android:layout_below="@id/nagyBetusGomb"
        android:layout_centerHorizontal="true"
        android:text="KIS BETUS SZOVEG"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/szinValtoGomb"
        android:layout_below="@+id/kisBetusGomb"
        android:layout_centerHorizontal="true"
        android:text="VELETLEN SZIN VALASZTAS"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textOutput"
        android:layout_below="@+id/szinValtoGomb"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>